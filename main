# C-Temp-Converter
import java.util.*;


 /*Please dont change class name, Dcoder
 and class must not be public*/

 //Compiler version JDK 1.8


 class Dcoder
 {
        public static void main(String args[])
        {

Scanner input = new Scanner (System.in);

                System.out.println("Which conversion would you like to make?");

                System.out.println("Fahrenheit->Celsius: 1 ");
                System.out.println("Celsius->Fahrenheit: 2 ");

                int choice=input.nextInt();

                System.out.println("Please enter your temperature: ");

                int usertemp=input.nextInt();

                if (choice ==1)
                {
                        int sum=(usertemp-32)*(5/9);
                        System.out.println("Your Celsius temp is: " + sum);
                }
        else{
                int sum=(usertemp+32)*(9/5);
                System.out.println("Your new Fahrenheit temp is: "+ sum);
        }
        }

 }
